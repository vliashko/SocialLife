<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SL.XamarinRealize.AddEventPage" Title="Добавление записи">
    <StackLayout Margin="10,10,10,10">
        <Label Text="Название" FontSize="Medium"/>
        <Entry Text="{Binding Naming}" FontSize="Medium"/>
        <Label Text="Дата и время" FontSize="Medium"/>
        <Entry Text="{Binding DateAndTime}" FontSize="Medium"/>
        <Label Text="Описание" FontSize="Medium"/>
        <Entry Text="{Binding Description}" FontSize="Medium"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Сохранить" Clicked="SaveEvent" />
            <Button Text="Отмена" Clicked="Cancel" />
        </StackLayout>
    </StackLayout>
</ContentPage>